{
  "name": "task-timer",
  "productName": "Task timer",
  "version": "1.0.0",
  "description": "task-timer app",
  "private": true,
  "main": "dist/electron/main/main.js",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "rimraf dist/ && vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "watch": "tsc -w",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "vite": "vite",
    "build": "rimraf dist/ && vite build && npm run copy-index && npm run copy-assets",
    "start": "npm run build && electron ./dist/main.js",
    "copy-index": "cp ./index.html ./dist/",
    "copy-assets": "cp -R ./src/assets/ ./dist/assets",
    "dev": "concurrently \"tsc -w\" \"electron ./dist/main.js\""
  },
  "build": {
    "appId": "geduramc_task_timer",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "keywords": [],
  "author": "geduramc",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.2.3",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/tsconfig": "^0.1.3",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-packager": "^17.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "npm-run-all": "^4.1.5",
    "ts-standard": "^12.0.2",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vue-tsc": "^1.0.12"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ]
  }
}
